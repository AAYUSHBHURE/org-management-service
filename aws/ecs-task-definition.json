{
    "family": "org-management-task",
    "networkMode": "awsvpc",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "512",
    "memory": "1024",
    "executionRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskExecutionRole",
    "containerDefinitions": [
        {
            "name": "org-management-api",
            "image": "YOUR_ACCOUNT_ID.dkr.ecr.us-east-1.amazonaws.com/org-management-service:latest",
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 8000,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "MONGODB_URL",
                    "value": "REPLACE_WITH_MONGODB_ATLAS_URL"
                },
                {
                    "name": "SECRET_KEY",
                    "value": "REPLACE_WITH_SECRET_KEY"
                },
                {
                    "name": "MASTER_DB_NAME",
                    "value": "master_db"
                },
                {
                    "name": "ALGORITHM",
                    "value": "HS256"
                },
                {
                    "name": "ACCESS_TOKEN_EXPIRE_MINUTES",
                    "value": "30"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/org-management",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "ecs",
                    "awslogs-create-group": "true"
                }
            }
        }
    ]
}